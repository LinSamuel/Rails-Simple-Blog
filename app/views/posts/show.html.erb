<h2><%= @post.title %></h2>
<p><%= @post.body %></p>

<hr> <!-- going to be a link to edit -->
<%= link_to "Edit", edit_post_path(@post), :class => 'btn btn-default' %>
<%= link_to "Delete", post_path(@post), 
				method: :delete,
				data: {confirm: 'Are you sure you want to delete this blog post?'},
				:class => 'btn btn-danger' %>

<hr>

